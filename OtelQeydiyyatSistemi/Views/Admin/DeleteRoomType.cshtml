@model OtelQeydiyyatSistemi.Models.RoomType

@{
    ViewData["Title"] = "Otaq Növünü Sil";
    Layout = "_Layout";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Admin Panel</a></li>
            <li class="breadcrumb-item"><a asp-action="RoomTypes">Otaq Növləri</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sil</li>
        </ol>
    </nav>

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="fas fa-trash me-2"></i>Otaq Növünü Sil</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>Diqqət! Bu otaq növünü silmək istədiyinizə əminsiniz?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Ad</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Təsvir</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Baza Qiyməti</dt>
                <dd class="col-sm-9">@Model.BasePrice ₼</dd>

                <dt class="col-sm-3">Otaq Sayı</dt>
                <dd class="col-sm-9">@(Model.Rooms?.Count ?? 0)</dd>
            </dl>

            @if (Model.Rooms != null && Model.Rooms.Any())
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>Bu otaq növünə aid @Model.Rooms.Count otaq var. Otaq növünü silmək üçün əvvəlcə bu otaqları silməlisiniz.
                </div>
            }
            else
            {
                <form asp-action="DeleteRoomType" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="RoomTypes" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times me-2"></i>Ləğv et
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Sil
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
