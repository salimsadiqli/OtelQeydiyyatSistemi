@model OtelQeydiyyatSistemi.Models.Room

@{
    ViewData["Title"] = "Otağı Redaktə Et";
    Layout = "_Layout";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Admin Panel</a></li>
            <li class="breadcrumb-item"><a asp-action="Rooms">Otaqlar</a></li>
            <li class="breadcrumb-item active" aria-current="page">Redaktə Et</li>
        </ol>
    </nav>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Otağı Redaktə Et</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditRoom" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="RoomNumber" class="form-label">Otaq Nömrəsi</label>
                        <input asp-for="RoomNumber" class="form-control" />
                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Floor" class="form-label">Mərtəbə</label>
                        <input asp-for="Floor" class="form-control" type="number" />
                        <span asp-validation-for="Floor" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="RoomTypeId" class="form-label">Otaq Növü</label>
                        <select asp-for="RoomTypeId" class="form-select" asp-items="ViewBag.RoomTypeId"></select>
                        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<OtelQeydiyyatSistemi.Models.RoomStatus>()"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Təsvir</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PricePerNight" class="form-label">Gecə Qiyməti (₼)</label>
                    <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Rooms" class="btn btn-secondary me-md-2">
                        <i class="fas fa-times me-2"></i>Ləğv et
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Yadda saxla
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
