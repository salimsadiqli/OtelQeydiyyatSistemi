@model OtelQeydiyyatSistemi.Models.RoomType

@{
    ViewData["Title"] = "Yeni Otaq Növü";
    Layout = "_Layout";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Admin Panel</a></li>
            <li class="breadcrumb-item"><a asp-action="RoomTypes">Otaq Növləri</a></li>
            <li class="breadcrumb-item active" aria-current="page">Yeni Otaq Növü</li>
        </ol>
    </nav>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Yeni Otaq Növü</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateRoomType" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ad</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Təsvir</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BasePrice" class="form-label">Baza Qiyməti (₼)</label>
                    <input asp-for="BasePrice" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="BasePrice" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="RoomTypes" class="btn btn-secondary me-md-2">
                        <i class="fas fa-times me-2"></i>Ləğv et
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Yadda saxla
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
